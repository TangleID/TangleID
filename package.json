{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "init": "yarn install --ignore-engines && lerna bootstrap",
    "lint": "tslint --force --format verbose ./packages/*/src/**/*.ts",
    "test": "jest --verbose",
    "docs": "yarn run build && lerna exec -- yarn run docs",
    "clean": "lerna exec --parallel -- rimraf lib typings",
    "build": "yarn run clean && lerna exec -- yarn run build",
    "audit": "yarn audit && lerna exec -- yarn audit"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^11.11.4",
    "@types/node-forge": "^0.8.2",
    "babel-core": "^7.0.0-bridge.0",
    "dmd-clear": "^0.1.2",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jsdoc-to-markdown": "^4.0.1",
    "lerna": "^3.13.1",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.14.0",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
